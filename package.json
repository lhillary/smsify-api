    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "newrelic": "^11.15.0",
    "openai": "^4.38.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.5",
    "swagger-jsdoc": "^6.2.8",
